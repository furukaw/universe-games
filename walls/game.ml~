open UniverseJs
open World
open Image
open Color

type color = White | Black
type state = U | W | B | N

type vector = int * int

type group = {
  cells : cell list;
  id : int;
  size : int option;
  color : color;
}

and cell = {
  pos : vector;
  state : state;
  group : group option;
}

type world_t = {
  cells : cell list;
  message : string;
}

let lines = 8
let rows = 6

let rec make_initial_cells (x : int) (y : int) : cell list =
  if lines < y then []
  else if rows < x then make_initial_cells 1 (y + 1)
  else {pos = (x, y); state = U; group = None} :: make_initial_cells (x + 1) y

  let initial_world = {
    
}

let width = 400
let height = 60

let draw (world : world_t) : Image.t =
  empty_scene width height

(* ゲーム開始 *)
let _ =
  big_bang
    initial_world
    ~name:"test"
    ~width:width
    ~height:height
    ~to_draw:draw
    ~on_mouse:on_mouse
    ~on_key_press:on_key_press
    ~on_key_release:on_key_release
    ~rate:1.			(* ゲームの動く速さ *)
    
